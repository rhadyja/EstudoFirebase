<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="ContainerComponents" >
        <item name="android:layout_height"> 300dp </item>
        <item name="android:layout_width"> 350dp </item>
        <item name="android:background"> @drawable/container_components </item>
        <item name="android:layout_margin"> 20dp </item>
    </style>
    <style name="ContainerComponentsCadastro" >
        <item name="android:layout_height"> 315dp </item>
        <item name="android:layout_width"> 360dp </item>
        <item name="android:background"> @drawable/container_components </item>
        <item name="android:layout_margin"> 6dp </item>
    </style>
    <style name="ContainerComponentsCadastro2" >
        <item name="android:layout_height"> 230dp </item>
        <item name="android:layout_width"> 360dp </item>
        <item name="android:background"> @drawable/container_components </item>
        <item name="android:layout_margin"> 20dp </item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_width"> match_parent </item>
        <item name="android:background"> @drawable/edittext </item>
        <item name="android:padding"> 20dp </item>
        <item name="android:layout_marginLeft"> 40dp </item>
        <item name="android:layout_marginRight"> 40dp </item>
        <item name="android:layout_marginTop"> 10dp </item>
        <item name="android:maxLength"> 100 </item>
    </style>
    <style name="Edit_text_pequeno">
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_width"> 160dp </item>
        <item name="android:background"> @drawable/edittext </item>
        <item name="android:padding"> 20dp </item>
        <item name="android:layout_marginLeft"> 40dp </item>
        <item name="android:layout_marginRight"> 40dp </item>
        <item name="android:layout_marginTop"> 10dp </item>
        <item name="android:maxLength"> 5 </item>
    </style>

    <style name="Button">
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_width"> match_parent </item>
        <item name="android:layout_marginLeft"> 40dp </item>
        <item name="android:layout_marginRight"> 40dp </item>
        <item name="android:background"> @drawable/button </item>
        <item name="android:padding"> 20dp </item>
        <item name="android:text"> Entrar </item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> 20sp </item>
        <item name="android:textStyle"> bold </item>
        <item name="android:textAllCaps"> false </item>
    </style>

    <style name="text_esqueceu_senha">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">Esqueceu sua senha?</item>
    </style>
    
    
    
</resources>